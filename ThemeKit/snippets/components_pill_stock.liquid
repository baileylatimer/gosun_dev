{% if product.metafields.custom_fields["available_year"] != blank %}
    <div aria-controls="backorder" class="pill pill--stock margin-top-sm color-contrast-medium width-1-2 cursor-pointer">
        <span class="icon"><i class="material-icons">{{ 'value_props.backorder.icon' | t }}</i></span>
        <p> Ships&nbsp;{{ product.metafields.custom_fields["available_month"] }}&nbsp;{{ product.metafields.custom_fields["available_year"] }} </p>
        <div id="backorder" class="popover bg padding-sm radius-md shadow-md js-popover js-tab-focus" role="dialog">
            <div class="text-component text-sm">
              <h1 class="text-md">{{ 'value_props.backorder.title' | t }}</h1>
              <p>{{ 'value_props.backorder.description' | t }}</p>
            </div>
        </div>
    </div> 



{% elsif collection_handles contains 'retired' %}
    <div class="pill pill--stock margin-top-sm color-contrast-medium width-1-2">
        <span class="icon"><i class="material-icons">beach_access</i></span>
        <p>	Retired â€“ This product won't be returning </p>
    </div>
{% elsif collection_handles contains 'back-order' %} 
    <div class="pill pill--stock margin-top-sm alert width-1-2">
        <span class="icon"><i class="material-icons color-contrast-medium">error_outline</i></span>
        <p> Out of stock - Check again soon </p> 
    </div> 
{% elsif variant.inventory_quantity <= settings.inventory_threshold %}
    {% if variant.inventory_quantity >= 1 %}
        <div class="pill pill--stock margin-top-sm alert width-1-2">
            <span class="icon"><i class="material-icons">error_outline</i></span>
            <p>	Only {{ variant.inventory_quantity }} left - Order soon </p>
        </div>
      {% else %}
      <div class="pill pill--stock margin-top-sm alert width-1-2">
        <span class="icon"><i class="material-icons color-contrast-medium">error_outline</i></span>
        <p> Out of stock - Check again soon  </p>
    </div> 
    {% endif %}
{% else %}
    <div class="pill pill--stock margin-top-sm success width-1-2">
        <span class="icon"><i class="material-icons">check_circle_outline</i></span>
        <p>	Ready to ship | Free shipping & returns </p>
    </div>

    <div class="popover bg padding-sm radius-md shadow-md js-popover js-tab-focus" role="dialog">
        <div class="text-component text-sm">
          <h1 class="text-md">{{ 'value_props.shipping.title' | t }}</h1>
          <p>{{ 'value_props.shipping.description' | t }}</p>
        </div>
    </div>

{% endif %}