{% if page.metafields.custom_fields["page_intro_content_title"] != blank %}
    <div class="banner center page_banner collection_banner nav-shadow mobile--true mb60">
        <div class="width-1-1 split-banner split-banner--img right">
            <img src="{{ page.metafields.custom_fields['page_intro_content_image'] }}" alt="" class="lazyload blur-up" sizes="100vw">
        </div>
        <div class="width-1-1 split-banner split-banner--content left pattern-map">
            <div id="bc-sf-filter-collection-description" class="section clearfix collection_description">
            <h1> {{ page.metafields.custom_fields['page_intro_content_title'] }}</h1>
            <h2 class="text-light">
                {{ page.metafields.custom_fields['page_intro_content_description'] }}
            </h2>
            </div>
        </div>
    </div>


    <div class="banner center page_banner collection_banner nav-shadow mobile--false mb60">
        <div class="width-1-2 split-banner split-banner--img right">
            <img src="{{ page.metafields.custom_fields['page_intro_content_image'] }}" alt="" class="lazyload blur-up" sizes="100vw">
        </div>
        <div class="width-1-2 split-banner split-banner--content left pattern-map">
            <div id="bc-sf-filter-collection-description" class="section clearfix collection_description">
            <h1> {{ page.metafields.custom_fields['page_intro_content_title'] }}</h1>
            <h2 class="text-light">
                {{ page.metafields.custom_fields['page_intro_content_description'] }}
            </h2>
            </div>
        </div>
    </div>
{% endif %}