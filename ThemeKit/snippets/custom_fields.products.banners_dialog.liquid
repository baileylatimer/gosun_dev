{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/patricksherwin.myshopify.com/products/configure/122049/edit
{% endcomment %}
<div class="banners banners--dialog width-100 flex-center">
    <div class="wrapper--xl flex ">
    {% assign product_refs = product.metafields.custom_fields["banners_dialog_product"] | split: "|" %}
        {% for product_handle in product_refs %}
        {% assign product_ref = all_products[product_handle] %}
        <div class="flex-left width-1-2 align-center">
            <p class="body-text--normal"> This product is no longer available. <b> Try the {{ product_ref.title }} instead? </b> </p>
            <img src="{{product_ref | img_url: '100x100'}};" alt="{{ product_ref.title }}">
        </div>
        <div class="flex-right  width-1-2 align-center">
            <a class="clr-sub"> Dismiss </a>
            <a href="href="{{product_ref.url}}" itemprop="url"" class="link--highlight"> Shop {{ product_ref.title }} </a>
        </div>
        {% endfor %}
    </div>
</div>