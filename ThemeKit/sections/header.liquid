<!------ START HEADER ------>

  <!-- Header / Small Screens -->
<header id="header" class="mobile_nav-fixed--{{ section.settings.fixed_header }}">
  {% if section.settings.promo_text != blank %}
    <div class="promo_banner wood-300">
      <div class="promo_banner__content">
        <div class="info-item info-item--banner">
          <span class="icon">
            <img src="https://cdn.shopify.com/s/files/1/0789/1333/files/united-states-of-america.png?v=1593021893">
            {% comment %}
            <i class="material-icons-outlined">{{ section.settings.promo_icon }}</i>
             {% endcomment %}
          </span>
          <p>
            {{ section.settings.promo_text }}
            </p>
        </div>
      </div>
      <div class="promo_banner-close"></div>
    </div>
  {% endif %}
  <!-- Hamburger Menu -->
  <div class="top_bar clearfix">
    <a class="mobile_nav dropdown_link" data-dropdown-rel="menu" data-no-instant="true">
      <div>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
      <span class="menu_title">{{ 'layout.general.menu' | t }}</span>
    </a>
    <a href="{{ shop.url }}" title="{{ shop.name | escape }}" class="mobile_logo logo">
      {% if section.settings.logo_mobile != nil %}
        <img src="{{ section.settings.logo_mobile | img_url: '410x' }}" alt="{{ shop.name | escape }}" class="lazyload" />
      {% elsif section.settings.logo != nil %}
        <img src="{{ section.settings.logo | img_url: '410x' }}" alt="{{ shop.name | escape }}" />
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>
    <div class="top_bar--right">
        <a class="mega-nav__icon-btn info-item" href="tel:+{{ section.settings.phone_number | replace: ' ', '' | replace: '+', '' | replace: '', '' }}"><span class="icon"><em class="material-icons-outlined">call</em></span></a>
      {% if section.settings.search_enabled %}
        <a href="/search" class="info-item icon-search dropdown_link mega-nav__icon-btn" title="{{ 'general.search.placeholder' | t | escape }}" data-dropdown-rel="search"><span class="icon"><em class="material-icons-outlined">search</em></span></a>
      {% endif %}
      {% if section.settings.show_cart %}
        <div class="mega-nav__icon-btn cart_container">
          <a href="/cart" class="{% if section.settings.cart_icon == "cart" %}icon-cart{% else %}icon-bag{% endif %} mini_cart dropdown_link mega-nav__icon-btn info-item" title="{{ 'layout.general.cart' | t | escape }}" data-no-instant><span class="icon"><em class="material-icons-outlined">shopping_cart</em></span> 
            <div class="cart_count-bubble"> 
              <span class="cart_count">{{ cart.item_count }}</span>
            </div>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
  <!-- Search Bar -->
  {% if section.settings.search_enabled %}
    <div class="dropdown_container center" data-dropdown="search">
      <div class="dropdown bg">
        <form action="/search" class="header_search_form">
          {% if settings.search_option != 'everything' %}
            <input type="hidden" name="type" value="product" />
          {% endif %}
       
          <span class="icon-search search-submit"><span class="icon"><em class="material-icons-outlined color-contrast-medium">search</em></span></span>
          <input class="color-contrast-high bg-contrast-low" type="text" name="q" placeholder="{{ 'general.search.placeholder' | t: shop_name: shop.name }}" onfocus="this.placeholder=''" autocapitalize="off" autocomplete="off" autocorrect="on" class="search-terms" />
        </form>
      </div>
    </div>
  {% endif %}
<!-- End Search Bar -->

  <!-- Drawer / Small Screens -->
  <div class="dropdown_container" data-dropdown="menu">
    <div class="dropdown bg">
      <div class="menu flex flex-column justify-between" id="mobile_menu">
      <!-- Main Menu -->
        <ul class="main-menu mega-nav__sub-items">
            <span class="height-md block border-bottom border-2"></span>
            {% include 'mobile-menu' with section.settings.main_linklist %}
            {% include 'mobile-menu' with section.settings.main_linklist2 %}
            <span class="height-md block border-bottom border-2"></span>
            {% include 'mobile-menu' with section.settings.top_bar_menu %}
        </ul>
         <!-- Utility Menu -->
        <section class="utility-nav flex flex-wrap padding-top-lg">
          {% if section.settings.phone_number != blank %}      
          <a class="info-item padding-left-md padding-y-xs width-50%" href="tel:+{{ section.settings.phone_number | replace: ' ', '' | replace: '+', '' | replace: '', '' }}"><span class="icon"><em class="material-icons-outlined">call</em></span>{{ section.settings.phone_number }}</a>
          {% endif %}
          <a class="info-item padding-left-md padding-y-xs width-50%" href="sms://+15135472426;?&amp;body=Hey%20GoSun%20Team!%20I%20have%20a%20question..."> <span class="icon"><em class="material-icons-outlined">textsms</em></span>+1 513.547.2426</a>
          <a class="info-item padding-left-md padding-y-xs width-50%" href="mailto:support@gosun.co"><span class="icon"><em class="material-icons-outlined">mail</em></span>support@gosun.co</a>
          <a class="info-item padding-left-md padding-y-xs width-50%" href="/account"><span class="icon"><em class="material-icons-outlined">account_circle</em></span>Account</a>
        </section>
      </div>
    </div>
  </div>
  <!-- End Drawer / Small Screens -->
</header>

  <!-- Header / Large Screens -->
<header class="{% if feature_image %}feature_image{% endif %} {% if section.settings.logo_home != nil %}secondary_logo--true{% endif %}">
  <div class="header {% if feature_image and settings.header_background == false %}is-absolute {% endif %} header-fixed--{{ section.settings.fixed_header }} {% if settings.header_background %}header-background--solid{% endif %}">
    <!-- Announcement Bar -->
    {% if section.settings.promo_text != blank %}
      {% if section.settings.promo_external %}
        <div class="promo_banner wood-300" onclick="window.open('{{ promo_link.url }}', '_blank')">
      {% else %}
        <div class="promo_banner wood-300" onclick="window.open('{{ promo_link.url }}', '_self')">
      {% endif %}
      <div class="promo_banner__content">
        <div class="info-item info-item--banner">
          <span class="icon">
            <img src="https://cdn.shopify.com/s/files/1/0789/1333/files/united-states-of-america.png?v=1593021893">
            {% comment %}
            <i class="material-icons-outlined">{{ section.settings.promo_icon }}</i>
            {% endcomment %}
          </span>
          <p>
            {{ section.settings.promo_text }}
          </p>
        </div>
      </div>
      <div class="promo_banner-close"></div>
      </div>
    {% endif %}
    <!-- Utility Bar -->
      <div class="top_bar clearfix">
        
        {% if section.settings.social_icons_header %}
          {% include 'social-icons' %}
        
        {% endif %}
      
        <ul class="menu left">
          <!-- Phone Number -->
          {% if section.settings.phone_number != blank %}     
            {% if section.settings.phone_position == "left" %}    
            <li class="info-item info-item--top-bar">
              <span class="icon">
                <i class="material-icons-outlined">call</i>
              </span>
              <a href="tel:+{{ section.settings.phone_number | replace: ' ', '' | replace: '+', '' | replace: '', '' }}">{{ section.settings.phone_number }}</a>
            </li>
            {% endif %}
          {% endif %}
          <!-- End Phone Number -->
          {% if section.settings.top_bar_menu != blank %}
            {% for link in linklists[section.settings.top_bar_menu].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% endif %}
        </ul>

        {% include 'minicart' %}

        <!-- Cart -->
        {% if section.settings.show_cart %}
        <div class="cart_container">
          <a href="/cart" class="mln15 info-item {% if section.settings.cart_icon == "cart" %}icon-cart{% else %}icon-bag{% endif %} mini_cart dropdown_link" data-no-instant>
            <span class="icon"><em class="material-icons-outlined">shopping_cart</em></span>
            <div class="cart_count-bubble"> 
              <span class="cart_count">{{ cart.item_count }}</span>
            </div>
          </a>
          {% assign shipping_value = 0 %}
          {% assign cart_total = cart.total_price %}
          {% assign shipping_value_left = shipping_value | minus: cart_total %}
          {% unless settings.cart_action == 'ajax' and template contains 'cart' %}
            <div class="cart_content animated fadeInRight ">
              <div class="cart_info bg-contrast-lower">
                <h2>Your cart</h2>
              </div>
              <hr>
              <div class="js-empty-cart__message {% if cart.item_count > 0 %}hidden{% endif %}">
                <p class="empty_cart">{{ 'layout.general.empty_cart' | t }}</p>
              </div>
              <form action="/checkout" method="post" data-money-format="{{ shop.money_format }}" data-shop-currency="{{ shop.currency }}" data-shop-name="{{ shop.name | escape }}" class="js-cart_content__form {% if cart.item_count == 0 %}{% endif %}">
                <ul class="cart_items js-cart_items clearfix">
                  {% assign total_saving = 0 %}
                  {% for item in cart.items %}
                    {% if item.variant.compare_at_price > item.variant.price %}
                      {% assign saving = item.variant.compare_at_price | minus: item.variant.price | times: item.quantity %}
                      {% assign total_saving = saving | plus: total_saving %}
                    {% endif %}

                    <li class="cart_item clearfix">
                      <a href="{{ item.url }}">
                        {% if item.image %}
                          <div class="cart_image">
                            <img src="{{ item | img_url: '320x' }}" alt="{{ item.title | escape }}" class="lazyload" />
                          </div>
                        {% endif %}

                        <div class="cart_item__title">
                          <div class="item_title">
                            <p class="font-bold" itemprop="name">{{ item.product.title }}</p>
                            <p class="font-light text-sm" itemprop="type">{{ item.product.type }}</p>
                            
                            {% unless item.product.has_only_default_variant or item.variant.title contains "Title" %}
                              -
                              {% for option in item.product.options %}
                                {{ item.variant.options[forloop.index0] }} {% unless forloop.last %}/{% endunless %}
                              {% endfor %}
                            {% endunless %}
                            {% if item.properties %}
                              {% for p in item.properties %}
                                {% if p.last != blank %}
                                  <div class="line-item">
                                    {{ p.first }}: {{ p.last }}
                                  </div>
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                          </div>
                      </a>
                      <div class="left product-quantity-box">
                        <span class="ss-icon product-minus js-change-quantity" data-func="minus"><span class="icon-minus"></span></span>
                        <input type="number" min="1" size="2" class="quantity" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" data-line-id="{{ forloop.index }}" />
                        <span class="ss-icon product-plus js-change-quantity" data-func="plus"><span class="icon-plus"></span></span>
                      </div>
                </div>

                      <strong class="right price">
                        {% if item.price < item.variant.compare_at_price %}
                          <span class="money was_price">{{ item.variant.compare_at_price | money }}</span>
                        {% endif %}
                        <span class="money">{{ item.price | money }}</span>
                      </strong>
                    </li>
                  {% endfor %}
                </ul>
                <hr>

                <ul>
                  <li class="cart_subtotal js-cart_subtotal">
                    <span class="base-BodyUppercase">{{ 'layout.general.subtotal' | t }}</span>
                      <span class="right">
                        <span class="money">{{ cart.total_price | money }}</span>
                      </span>
                  </li>
                  <li class="margin-bottom-xl text-left">
                    <span class="base-BodyUppercase">Shipping</span>
                    <span class="right">
                      <span class="money">FREE</span>
                    </span>
                  </li>
                  {% if settings.display_savings %}
                  <li class="cart_savings sale js-cart_savings margin-top-sm  margin-bottom-lg">
                    {% if total_saving > 0 %}
                      <span class="thumbnail_banner violator--discount right">
                        <span class="money"></span>You save&nbsp;{{ total_saving | money }}</span>
                      </span>
                    {% endif %}
                  </li>
                {% endif %}

                <div class="position-absolute left-0 bottom-0 cart_bottom">
                    <!--
                  <li class="cart_subtotal js-cart_subtotal flex justify-between">
                    <h3>Your total</h3>
                      <h3 class="money right">{{ cart.total_price | money }}</h3>
                  </li>
                  -->

                  <li>
                    {% if settings.display_special_instructions and settings.go_to_checkout %}
                      <textarea id="note" name="note" rows="2" placeholder="{{ 'layout.general.cart_note' | t }}" class="clearfix">{{ cart.note }}</textarea>
                    {% endif %}

                    {% if settings.display_tos_checkbox and settings.go_to_checkout %}
                      <p class="tos">
                        <input type="checkbox" class="tos_agree" id="sliding_agree" required />
                        <label class="tos_label">
                          {{ 'cart.general.agree_to_terms_html' | t }}
                        </label>
                        {% if settings.tos_page != blank %}
                          <a href="{{ pages[settings.tos_page].url }}" target="_blank" class="tos_icon">{{ 'cart.general.view_terms' | t }}</a>
                        {% endif %}
                      </p>
                    {% endif %}

                    {% if settings.go_to_checkout %}
                      <button type="submit" class="btn btn--primary action_button add_to_cart" id="checkout">{% if settings.show_lock_icon %}<span class="material-icons-outlined icon-lock"></span>{% endif %}{{ 'layout.general.checkout' | t }}</button>
                    {% else %}
                      <button type="submit" class="btn btn--primary action_button add_to_cart" id="go_to_cart">{% if settings.show_lock_icon %}<span class="material-icons-outlined icon-lock"></span>{% endif %}{{ 'layout.general.go_to_cart' | t }} </button>
                    {% endif %}

                    <div class="pill color-contrast-high margin-top-md margin-bottom-lg flex">
                      <i class="icon--sm margin-right-xxs material-icons-outlined color-contrast-low">monetization_on</i>
                      <p class="affirm-as-low-as" data-page-type="cart" data-amount="{{cart.total_price}}" data-affirm-type="text" data-learnmore-show="true"></p>
                    </div>

                  </li>
                </div>
                </ul>
              </form>
        {% endunless %}
        </div>
        
          
        <!-- Utility Menu -->
        <ul class="menu right">
        <!-- Phone Number -->
        {% if section.settings.phone_number != blank %}     
          {% if section.settings.phone_position == "right" %}    
          <li class="info-item info-item--top-bar">
            <span class="icon">
              <i class="material-icons-outlined">call</i>
            </span>
            <a href="tel:+{{ section.settings.phone_number | replace: ' ', '' | replace: '+', '' | replace: '', '' }}">{{ section.settings.phone_number }}</a>
          </li>
          {% endif %}
        {% endif %}
          <!-- End Phone Number -->

          {% if settings.show_multiple_currencies %}
            <li>
              {% include 'currencies-switcher' %}
            </li>
          {% endif %}

          {% if shop.customer_accounts_enabled %}
            <li>
              <a href="/account" class="icon-user info-item" title="{{ 'layout.customer.my_account' | t }} {% if customer %}({{ customer.email }}){% endif %}"> 
                <span class="icon">
                  <i class="material-icons-outlined">account_circle</i>
                </span>
                <!--
                <span>{% if customer %}{{ 'layout.customer.my_account' | t }}{% else %}{{ 'layout.customer.log_in' | t }}{% endif %}</span>
                -->
              </a>
            </li>
          {% endif %}

          <li class="info-item info-item--top-bar pointer" onclick="window.open('/account?p=1#wishlist', '_self')">
            <span class="icon">
              <i class="material-icons-outlined">favorite_border</i>
            </span>
          </li>
        </ul>
      </div>
     
    {% endif %}

  </div>

    <!-- Menu Bar -->
    <div class="main_nav_wrapper">
      <div class=" main_nav clearfix menu-position--{{ section.settings.menu_position }} logo-align--{{ section.settings.logo_position }} max-width-xxxl">
        <!-- Logo -->
        {% capture logo %}
          <div class="logo text-align--{{ section.settings.logo_alignment }}">
            <a href="{{ shop.url }}" title="{{ shop.name }}">
              {% if section.settings.logo_home != nil %}
                <img src="{{ section.settings.logo_home | img_url: '410x' }}" class="secondary_logo" alt="{{ shop.name | escape }}" />
              {% endif %}
              {% if section.settings.logo != nil %}
                <img src="{{ section.settings.logo | img_url: '410x' }}" class="primary_logo lazyload" alt="{{ shop.name | escape }}" />
              {% else %}
                {{ shop.name }}
              {% endif %}
            </a>
          </div>
        {% endcapture %}
        {% assign vertical_menu = section.settings.vertical_menu %}
        <!-- Menu / Left -->
        {% capture menu_left %}
          {% if vertical_menu %}
            {% include 'vertical-menu' with section.settings.main_linklist %}
          {% else %}
            {% include 'menu' with section.settings.main_linklist %}
          {% endif %}

            <!-- Sale Link -->
            {% if section.settings.sale_text != blank %}
            <li class="link-sale sublink color-white">
              <a href="{{ section.settings.sale_url }}">
                <span class="icon">
                  <i class="material-icons-outlined"> {{ section.settings.sale_icon }}</i>
                </span>
                {{ section.settings.sale_text }}
              </a>
            </li>
          {% endif %}

        {% endcapture %}
        <!-- Menu / Right -->
        {% capture menu_right %}
          {% if vertical_menu %}
            {% include 'vertical-menu' with section.settings.main_linklist2 %}
          {% else %}
            {% include 'menu' with section.settings.main_linklist2 %}
          {% endif %}
          <!-- Search Bar -->
          {% if section.settings.search_enabled %}
            <li class="search_container" data-autocomplete-{{ settings.enable_autocomplete }}>
              <form action="/search" class="search_form">
                {% if settings.search_option != 'everything' %}
                  <input type="hidden" name="type" value="product" />
                {% endif %}
                <span class="icon-search search-submit"><span class="icon"><em class="material-icons-outlined">search</em></span></span>
                <input type="text" name="q" placeholder="{{ 'general.search.placeholder' | t: shop_name: shop.name }}" value="{% if search and search.results.first.price %}{{ search.terms | replace: '*', '' }}{% endif %}" autocapitalize="off" autocomplete="off" autocorrect="off" />
              </form>
            </li>
            <li class="search_link">
              <a href="/search" class="icon-search dropdown_link" title="{{ 'general.search.placeholder' | t | escape }}" data-dropdown-rel="search"></a>
            </li>
          {% endif %}
        {% endcapture %}

        <!-- Layout (All together now) -->
        {% if section.settings.logo_position == "left" or section.settings.menu_position == "block" %}
          
          <div class="nav">
            <ul class="menu flex justify-center align-center clearfix">
              {{ logo }}
              {{ menu_left }}
            </ul>
            <ul class="menu clearfix">
              {{ menu_right }}
            </ul>
          
          </div>
        {% else %}
          <div class="nav">
            <ul class="menu {{ section.settings.menu_alignment }} clearfix">
              {{ menu_left }}
            </ul>
          </div>
          {{ logo }}
          <div class="nav">
            <ul class="menu {% if section.settings.menu_alignment == 'align_left' %}align_right{% elsif section.settings.menu_alignment == 'align_right' %}align_left{% else %}{{ section.settings.menu_alignment }}{% endif %} clearfix">
              {{ menu_right }}
            </ul>
          </div>
        {% endif %}
        <!-- Search Bar / Second instance - Investigate this -->
        {% if section.settings.search_enabled %}
          <div class="dropdown_container center" data-dropdown="search">
            <div class="dropdown" data-autocomplete-{{ settings.enable_autocomplete }}>
              <form action="/search" class="header_search_form">
                {% if settings.search_option != 'everything' %}
                  <input type="hidden" name="type" value="product" />
                {% endif %}
                <span class="icon-search search-submit"></span>
                <input type="text" name="q" placeholder="{{ 'general.search.placeholder' | t: shop_name: shop.name }}" autocapitalize="off" autocomplete="off" autocorrect="off" class="search-terms" />
              </form>
            </div>
          </div>
        {% endif %}
        {% include 'sub-menu' with section.settings.main_linklist %}
        {% include 'sub-menu' with section.settings.main_linklist2 %}
      </div>
    </div>
  </div>
</header>

<!------ END HEADER ------>





<!-- Styling -->
<style>
  .main_nav div.logo a {
    padding-top: {{ section.settings.logo_top_padding }}px;
    padding-bottom: {{ section.settings.logo_top_padding }}px;
  }
  div.logo img {
    width: {{ section.settings.logo_display_width }}px;
  }
  .nav {
    {% if section.settings.menu_position == "block" %}
      width: 100%;
      clear: both;
    {% elsif section.settings.logo_position == "left" %}
      width: 84%;
      float: left;
    {% else %}
      width: 42%;
      float: left;
    {% endif %}
  }

  {% if section.settings.menu_top_padding %}
    .nav ul.menu {
      padding-top: {{ section.settings.menu_top_padding }}px;
      padding-bottom: {{ section.settings.menu_top_padding }}px;
    }

    .sticky_nav ul.menu, .sticky_nav .mini_cart {
      padding-top: {{ section.settings.menu_top_padding | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.menu_top_padding | divided_by: 2 }}px;
    }
  {% endif %}

  {% unless section.settings.show_cart %}
    #header .top_bar .icon-search {
      right: 15px;
    }
  {% endunless %}

  {% if section.settings.fixed_header == false %}
    @media only screen and (max-width: 798px) {
      .header-section {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
      }
    }
  {% else %}
    body {
      overscroll-behavior-y: none;
    }
  {% endif %}

</style>

<!-- JSON -->
{% schema %}
{
  "name": "Header",
  "class": "header-section",
  "settings": [
    {
      "type": "header",
      "content": "Announcement bar"
    },

    {
      "type": "select",
      "id": "promo_icon",
      "label": "Icon",
      "options": [
        {
          "value": "fireplace",
          "label": "Fire"
        },
        {
          "value": "local_atm",
          "label": "Sale"
        },
        {
          "value": "local_shipping",
          "label": "Shipping"
        },
        {
          "value": "public",
          "label": "Planet"
        },
                {
          "value": "card_giftcard",
          "label": "Gift"
        }
      ],
      "default": "local_shipping"
    },

    {
      "type": "richtext",
      "id": "promo_text",
      "label": "Tagline",
      "info": "Maximum character limit is 170"
    },
    {
      "type": "url",
      "id": "promo_link",
      "label": "Your link"
    },
    {
      "type": "checkbox",
      "id": "promo_external",
      "label": "Open link in new tab",
      "default": false
    },
    {
     "type": "header",
     "content": "Top bar"
    },
    {
      "type": "checkbox",
      "id": "social_icons_header",
      "label": "Show social media header icons",
      "default": true
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone number",
      "info": "1-800-555-5555"
    },
    {
      "type": "link_list",
      "id": "top_bar_menu",
      "label": "Menu",
      "info": "This menu won't show drop-down items"
    },
      {
      "type": "checkbox",
