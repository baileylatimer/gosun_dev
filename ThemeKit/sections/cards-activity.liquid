<div class="container padding-bottom-xl">

 <div class="grid-h grid-h--1-1 cards cards--activity mobile--true-grid"> 
    {% for block in section.blocks %}
        {% if block.settings.image != blank %}
            <article class="article-tile article-tile--md width-1-1 text-light radius-md ">
                <a href="{{ block.settings.link }}" itemprop="url">
                  <div class="article-media filter-top lazyloaded" style="background-image: url( {{ block.settings.image |  img_url: '400x' }} );" title="{{ alt | escape }}">
                    <h3 class="heading--h3"> {{ block.settings.title }} </h3>
                    <p class="body-text--caption semibold text-light--sub b10" > Shop {{ block.settings.title }} ➞</p>
                  </div>
                </a>
              </article>
          {% endif %}
      {% endfor %}
      </div>

  <div class="grid-h grid-h--1-6 cards cards--activity mobile--false-grid"> 
    {% for block in section.blocks %}
        {% if block.settings.image != blank %}
            <article class="article-tile article-tile--md width-1-1 text-light radius-md ">
                <a href="{{ block.settings.link }}" itemprop="url">
                  <div class="article-media filter-top lazyloaded" style="background-image: url( {{ block.settings.image |  img_url: '600x' }} );" title="{{ alt | escape }}">
                    <h3 class="heading--h3"> {{ block.settings.title }} </h3>
                    <p class="body-text--caption semibold text-light--sub b10" > Shop {{ block.settings.title }} ➞</p>
                  </div>
                </a>
              </article>
          {% endif %}
      {% endfor %}
      </div>

  </div>
{% schema %}
  {
    "name": "Activities",
    "class": "filter-map--white",
    "max_blocks": 5,
    "settings": [
      {
        "type":      "header",
        "content":   "Created by [Latimer Design](https:\/\/latimer.me)",
        "info":      "Need help? [Send an email.](mailto:\/\/bailey@latimer.me)"
      },
      {
        "type": "range",
        "id": "grid-h-size",
        "label": "Images per row",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 4,
        "info": "Vertical masonry and classic only"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "800 x 800px recommended"
          },
            {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Activity name",
          "default": "Activity name"
        }
        ]
      }
    ],
     "presets": [
      {
        "name": "Activities",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
