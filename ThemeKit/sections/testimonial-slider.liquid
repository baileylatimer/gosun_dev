<div class="testimonial-slideshow slideshow slideshow--transition-slide js-slideshow bg-primary-lighter padding-top-lg margin-bottom-lg" data-swipe="on">
    
    <h2 class="text-center margin-bottom-md-neg">{{ section.settings.title }}</h2>

    <p class="sr-only">Slideshow Items</p>
    
    <ul class="slideshow__content">
      {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {%- assign product = all_products[block.settings.featured_product] -%}

        {%- assign collection_handles = product.collections | map: 'handle' -%}
        {% if product.empty? %}
          {%- assign section_onboarding = true -%}
        {% else %}
          {%- assign section_onboarding = false -%}
        {% endif %}

        <li class="slideshow__item text-center js-slideshow__item product-{{ product.id }} itemprop="itemListElement" itemscope itemtype="http://schema.org/Product">
          {{ block.shopify_attributes }}

          <div class="container max-width-sm">
            {% include '_1_rating' %}
            <blockquote class="text-lg@md line-height-md">
              {{ block.settings.testimonial }}
            </blockquote>

            <footer class="margin-top-md">
              
              <figure class="testimonial-slideshow__profile-img radius-50% border border-2 border-primary margin-x-auto margin-bottom-sm" aria-hidden="true">
                <!--{% include 'product-images', image_width: 'full' %}-->
                <a href="{{ product.url }}"><img src="{{ product.featured_image | img_url: '200x' }}" alt="{{ product.title }}"></a>
              </figure>
            
              <cite class="flex justify-center align-center">
                {%- if block.settings.name != blank -%} 
                <strong>{{ block.settings.name }}</strong>
                {%- endif -%}
                
                <a href="{{ product.url }}" itemprop="name" class="block color-contrast-medium link-fx-5">&nbsp;loves the&nbsp;{{ product.title }}</a>
                
              </cite>
            </footer>
          </div>
        </li>

      {% endfor %}
      {% endif %}
    </ul>
  
    <ul>
      <li class="slideshow__control js-slideshow__control">
        <button class="reset slideshow__btn js-tab-focus">
          <svg class="icon" viewBox="0 0 32 32"><title>Show previous slide</title><path d="M20.768,31.395L10.186,16.581c-0.248-0.348-0.248-0.814,0-1.162L20.768,0.605l1.627,1.162L12.229,16 l10.166,14.232L20.768,31.395z"></path></svg>
        </button>
      </li>
  
      <li class="slideshow__control js-slideshow__control">
        <button class="reset slideshow__btn js-tab-focus">
          <svg class="icon" viewBox="0 0 32 32"><title>Show next slide</title><path d="M11.232,31.395l-1.627-1.162L19.771,16L9.605,1.768l1.627-1.162l10.582,14.813 c0.248,0.348,0.248,0.814,0,1.162L11.232,31.395z"></path></svg>
        </button>
      </li>
    </ul>
  </div>


